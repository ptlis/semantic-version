{
    "name":         "ptlis/semantic-version",
    "description":  "Tools for working with semantic version numbers.",
    "license":      "MIT",
    "keywords":     [ "semantic", "version", "versioning" ],
    "type":         "library",
    "authors": [
        {
            "name": "brian ridley",
            "email":"ptlis@ptlis.net"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "pdepend/pdepend":                      "1.1.*",
        "phploc/phploc":                        "2.0.*",
        "phpmd/phpmd":                          "@dev",
        "phpunit/phpunit":                      "3.7.*",
        "sebastian/phpcpd":                     "2.0.*",
        "squizlabs/php_codesniffer":            "1.5.*"
    },
    "autoload": {
        "psr-0": {
            "ptlis\\SemanticVersion": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
